{
    "$schema": "../../../../../../../packages/backbrace-devkit/schema/pagedesign.json",
    "name": "login",
    "caption": "Login",
    "sections": [
        {
            "name": "title",
            "component": "template",
            "attributes": {
                "template": "<div class=\"alert is-important\">Note: Enter any username and password.</div>"
            }
        },
        {
            "name": "Login",
            "component": "login",
            "attributes": {
                "data": "data/auth.json",
                "loginquery": ".",
                "loginbind": "auth",
                "userquery": ".",
                "userbind": "user"
            },
            "fields": [
                {
                    "name": "Username",
                    "bind": "username",
                    "attributes": {
                        "autocomplete": "new-password"
                    }
                },
                {
                    "name": "Password",
                    "bind": "password",
                    "attributes": {
                        "type": "password",
                        "autocomplete": "new-password"
                    }
                }
            ]
        }
    ]
}