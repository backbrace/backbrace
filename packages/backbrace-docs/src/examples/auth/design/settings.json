{
    "$schema": "../../../../../backbrace-devkit/schema/settings.json",
    "base": "examples/auth/",
    "app": {
        "title": "Authentication Example"
    },
    "dir": {
        "design": "./design/"
    },
    "style": {
        "images": {
            "logo": "/images/logo-landscape.png"
        },
        "colors": {
            "bgprimary": "#2d3436",
            "bgbody": "#FFF",
            "textbody": "rgba(0, 0, 0, 0.87)"
        }
    },
    "head": {
        "meta": [
            {
                "name": "theme-color",
                "content": "#2c3e50"
            }
        ],
        "link": [
            {
                "rel": "icon",
                "href": "/images/45x45-icon.png",
                "type": "image/x-icon"
            },
            {
                "rel": "shortcut icon",
                "href": "/images/45x45-icon.png",
                "type": "image/x-icon"
            }
        ]
    },
    "auth": {
        "login": "login",
        "logout": "logout",
        "profile": "profile"
    },
    "routes": [
        {
            "path": "/",
            "page": "page/home.json",
            "private": true
        },
        {
            "path": "login",
            "page": "page/login.json"
        },
        {
            "path": "profile/:id",
            "page": "page/profile.json"
        },
        {
            "path": "logout",
            "page": "page/logout.json"
        }
    ]
}