{
    "$schema": "../../../backbrace-devkit/schema/settings.json",
    "windowMode": false,
    "app": {
        "title": "Backbrace",
        "footer": {
            "name": "footer",
            "component": "template",
            "data": "data/footer.json",
            "attributes": {
                "template": "<footer>{{{data.0.html}}}</footer>"
            }
        }
    },
    "style": {
        "images": {
            "logo": "/images/logo-landscape.png"
        },
        "colors": {
            "bgprimary": "#2d3436",
            "bgbody": "#FFF",
            "textbody": "rgba(0, 0, 0, 0.87)"
        }
    },
    "head": {
        "meta": [
            {
                "name": "theme-color",
                "content": "#2c3e50"
            }
        ],
        "link": [
            {
                "rel": "icon",
                "href": "./images/45x45-icon.png",
                "type": "image/x-icon"
            },
            {
                "rel": "shortcut icon",
                "href": "./images/45x45-icon.png",
                "type": "image/x-icon"
            },
            {
                "rel": "stylesheet",
                "href": "/styles/website.css"
            },
            {
                "rel": "stylesheet",
                "href": "./node_modules/prismjs/themes/prism-tomorrow.css"
            }
        ],
        "script": [
            {
                "charset": "utf-8",
                "src": "./node_modules/prismjs/prism.js",
                "async": "false"
            },
            {
                "charset": "utf-8",
                "src": "./node_modules/prismjs/components/prism-json.js",
                "async": "false"
            }
        ]
    },
    "routes": [
        {
            "path": "/",
            "page": "page/guide.json",
            "params": {
                "name": "index"
            }
        },
        {
            "path": "api",
            "page": "page/apihome.json"
        },
        {
            "path": "api/:module",
            "page": "page/api.json"
        },
        {
            "path": "components",
            "page": "page/components/components.json",
            "params": {
                "name": "components"
            }
        },
        {
            "path": "components/:name",
            "page": "page/components/:name.json"
        },
        {
            "path": ":name",
            "page": "page/guide.json"
        },
        {
            "path": ":parent/:name",
            "page": "page/guide.json"
        }
    ]
}